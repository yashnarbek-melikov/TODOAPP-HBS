<main>
   <div class='container'>
      <h1 class='page-title'>📝 Yangi vazifa qo‘shish</h1>

      <form class='task-form' action='/task' method='POST'>
         <label for='title'>Sarlavha nomi</label>
         <input
            type='text'
            id='title'
            name='title'
            placeholder='Masalan: Dars tayyorlash'
            required
         />

         <label for='body'>Tanasi</label>
         <textarea
            id='body'
            name='body'
            rows='4'
            placeholder='Masalan: HTML va CSSni o‘rganish'
            required
         ></textarea>

         <label for='status'>Holati</label>
         <select id='status' name='status'>
            <option value='kutilmoqda'>Kutilmoqda</option>
            <option value='tugallangan'>Tugallangan</option>
         </select>

         <button type='submit' class='btn primary-btn'>
            Qo‘shish
         </button>
         <a href='/' class='btn secondary-btn'>Barcha vazifalar</a>
      </form>
   </div>
</main>